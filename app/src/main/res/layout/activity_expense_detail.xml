<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddTourActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <include
        layout="@layout/progress_bar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <ScrollView
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:drawableStart="@drawable/ic_location_accent"
                android:drawablePadding="3dp"

                android:text="Place From"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <EditText
                android:paddingStart="10dp"
                android:id="@+id/placeFrom"

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edt_border_line"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorAccent"
                android:focusable="false"
                android:inputType="textMultiLine"
                android:textSize="16sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/ic_location_accent"
                android:drawablePadding="3dp"

                android:text="Place To"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <EditText
                android:paddingStart="10dp"
                android:id="@+id/placeTo"

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edt_border_line"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorAccent"
                android:focusable="false"
                android:inputType="textMultiLine"
                android:textSize="16sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/ic_calender_accent"
                android:drawablePadding="3dp"
                android:text="Work Date"

                android:textColor="@color/colorAccent"

                android:textSize="16sp" />

            <EditText
                android:paddingStart="10dp"
                android:id="@+id/workDate"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edt_border_line"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorAccent"
                android:focusable="false"
                android:textSize="16sp" />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/ic_scooter_accent"
                android:drawablePadding="3dp"

                android:text="Mode"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <EditText
                android:paddingStart="10dp"
                android:id="@+id/mode"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edt_border_line"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorAccent"

                android:focusable="false"
                android:textSize="16sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/ic_rupee_accent"
                android:drawablePadding="3dp"

                android:text="Allowance"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <EditText
                android:paddingStart="10dp"
                android:id="@+id/allowance"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edt_border_line"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorAccent"
                android:focusable="false"
                android:inputType="number"
                android:maxLength="7"

                android:textSize="16sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/ic_rupee_accent"
                android:drawablePadding="3dp"

                android:text="Misc Amount"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <EditText
                android:paddingStart="10dp"
                android:id="@+id/misamount"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edt_border_line"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorAccent"
                android:focusable="false"

                android:maxLength="7"
                android:textSize="16sp" />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/ic_rupee_accent"
                android:drawablePadding="3dp"

                android:text="- Deduction"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <EditText
                android:paddingStart="10dp"
                android:id="@+id/deduction"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edt_border_line"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorAccent"
                android:focusable="false"

                android:maxLength="7"
                android:textSize="16sp" />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/ic_rupee_accent"
                android:drawablePadding="3dp"

                android:text="Total Amount"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <EditText
                android:paddingStart="10dp"
                android:id="@+id/totalAmount"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edt_border_line"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorAccent"

                android:focusable="false"
                android:textSize="16sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/ic_note_accent"
                android:drawablePadding="3dp"
                android:text="Remark"

                android:textColor="@color/colorAccent"

                android:textSize="16sp" />

            <EditText
                android:paddingStart="10dp"
                android:id="@+id/remark"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edt_border_line"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorAccent"
                android:focusable="false"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:lines="3"
                android:minHeight="80dp"
                android:padding="3dp"
                android:textSize="16sp" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>