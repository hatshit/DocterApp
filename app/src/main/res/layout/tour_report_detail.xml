<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ScrollView
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"

            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:drawableStart="@drawable/ic_location_accent"
                android:drawablePadding="3dp"

                android:text="Place"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/place"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edt_border_line"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorAccent"

                android:focusable="false"
                android:textSize="16sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/ic_calender_accent"
                android:drawablePadding="3dp"
                android:text="From Date"

                android:textColor="@color/colorAccent"

                android:textSize="16sp" />

            <EditText
                android:id="@+id/from_Date"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edt_border_line"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorAccent"
                android:focusable="false"

                android:textSize="16sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/ic_calender_accent"

                android:drawablePadding="3dp"

                android:text="To Date"

                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/to_Date"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edt_border_line"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorAccent"
                android:focusable="false"

                android:textSize="16sp" />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/ic_day_accent"
                android:drawablePadding="3dp"

                android:text="Total Days"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/totalDays"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edt_border_line"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorAccent"

                android:focusable="false"
                android:textSize="16sp" />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/ic_note_accent"
                android:drawablePadding="3dp"
                android:text="Remark"

                android:textColor="@color/colorAccent"

                android:textSize="16sp" />


            <EditText
                android:id="@+id/remark"

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edt_border_line"
                android:layout_marginTop="5dp"
                android:focusable="false"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:lines="3"
                android:minHeight="80dp"
                android:padding="3dp"
                android:textSize="16sp" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>